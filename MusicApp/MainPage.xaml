<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicApp.MainPage"
             BackgroundColor="#580B0B">
    <VerticalStackLayout>
        <Frame BackgroundColor="#802F2F" CornerRadius="15" WidthRequest="342" HeightRequest="42" Margin="30" Padding="10,0">
            <Entry Placeholder="Wyszukaj utwór.." TextColor="#FDE4E4" PlaceholderColor="#FDE4E4"/>
        </Frame>
            <HorizontalStackLayout>
            <Frame Margin="20" CornerRadius="15" WidthRequest="170" HeightRequest="170"></Frame>
            </HorizontalStackLayout>
        <Frame Padding="10,0" BackgroundColor="#E2D0D0" CornerRadius="15" WidthRequest="300" HeightRequest="47" HorizontalOptions="Start">
                <Label Text="Dostępne utwory:" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>

        <Frame>
            <Label Text="Nazwa Utworu" />
            <Button Text="->" Clicked="musicPage_Button" />
        </Frame>
    </VerticalStackLayout>
    
</ContentPage>
